<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_buildings_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_new_buildings_list_text"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_load_buildings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_load_new_buildings_text"
        app:layout_constraintTop_toBottomOf="@+id/btn_buildings_list" />

</android.support.constraint.ConstraintLayout>
